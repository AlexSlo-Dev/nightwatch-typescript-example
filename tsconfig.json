{
  "compilerOptions": {
    "rootDir": "./src",
    "strict": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./custom-typings",
      "./node_modules/@types",
      "./node_modules/@leafly-com/lm-node-utils/dist/index.d.ts",
      "./node_modules/@leafly-com/lm-types/dist/index.d.ts",
    ]
  },
}
